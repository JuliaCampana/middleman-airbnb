
<!-- source/flats/show.html.erb -->

<!-- Access data.flats with owner's name as key -->
<% flat = data.flats[owner] %>


<!-- Banner -->
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_name %>');">
  <div class="banner-content"></div>
</div>

<!--Strutura do profile + form-->
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <div class="profile">

      </div>

    </div>

    <div class="col-xs-12 col-md-6">
      <form>

      </form>
    </div>
  </div>
</div>

<!-- Inject flat data in template -->
<%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle" %>
<p><%= flat.name %></p>
<h1><%= flat.description %></h1>
<p><%= flat.city_name %></p>

